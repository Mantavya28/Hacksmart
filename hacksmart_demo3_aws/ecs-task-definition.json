{
    "family": "hacksmart-streamlit-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "hacksmart-streamlit",
            "image": "{ACCOUNT_ID}.dkr.ecr.{REGION}.amazonaws.com/hacksmart-streamlit:latest",
            "portMappings": [
                {
                    "containerPort": 8501,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "STREAMLIT_SERVER_PORT",
                    "value": "8501"
                },
                {
                    "name": "STREAMLIT_SERVER_ADDRESS",
                    "value": "0.0.0.0"
                },
                {
                    "name": "STREAMLIT_SERVER_HEADLESS",
                    "value": "true"
                },
                {
                    "name": "STREAMLIT_BROWSER_GATHER_USAGE_STATS",
                    "value": "false"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/hacksmart-streamlit",
                    "awslogs-region": "{REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8501/_stcore/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ]
}